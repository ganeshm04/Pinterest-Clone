<% include ./partials/header.ejs %>
    <div class="profile w-full min-h-screen bg-zinc-700 text-white pt-1">
        <form id="uploadform" hidden action="/fileupload" method="post" enctype="multipart/form-data">
            <input type="file" name="image">
        </form>
        <div class="prof_details flex flex-col items-center mt-[20px]">
            <div class="relative">
                <span id="uploadicon" class="w-7 h-7 absolute bottom-0 right-0 rounded-full flex items-center justify-center bg-zinc-100">
                    <i class="ri-pencil-fill text-black"></i>
                    <!-- <i class="ri-pencil-line"></i> -->
                </span>
                <div class="w-32 h-32 bg-zinc-100 rounded-full overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user1.profileImage %>" alt=" ">
                </div>
            </div>
            <h1 class="text-3xl font-semibold mt-5"><%= user1.name %></h1>
            <h3 class="text-md"><%= user1.username %></h3>
            <a href="/edit" class="mt-5 px-7 py-2 bg-zinc-300 rounded-full text-xs font-semibold text-black">Edit</a>
            <a href="/add" class="px-10 py-2 rounded-lg bg-red-700 text-xs font-semibold mt-[15px]">Add new Post</a>
        </div>
        <div class="cards flex felx-wrap gap-10 px-10 mt-10">
            <div class="card">
                <div class="w-52 h-40 bg-zinc-200 rounded-lg overflow-hidden">
                    <img class="w-full h-full object-cover" src="/images/uploads/<%= user1?.posts[0]?.image %>" alt="">
                </div>
                <a href="/show/posts" class="text-xl font-semibold mt-3">Your Uploaded Pins</a>
                <h5 class="text-sm font-medium opacity-60"><%= user1.posts.length %> Pins</h5>
            </div>
        </div>
    </div>
    <script>
        document.querySelector("#uploadicon").addEventListener("click", function () {
            document.querySelector("#uploadform input").click()
        });
        document.querySelector("#uploadform input").addEventListener("change", function () {
            document.querySelector("#uploadform").submit()
        });
    </script>
    <% include ./partials/footer.ejs %>