<% include ./partials/header.ejs %>
    <div class="w-full min-h-screen bg-zinc-800 px-10 py-5 text-white">
        <h1>Create a new Post</h1>
        <hr class="opacity-20 mt-3">
        <form action="/createpost" method="post" enctype="multipart/form-data">
            <input class="block w-1/3 px-3 py-2  mt-5" type="file" name="postImage">
            <input class="block w-1/3 px-3 py-2 border-2 rounded-md mt-5 text-black" type="text" name="title" id="" placeholder="Title">
            <textarea class="block w-1/3 px-3 py-2 border-2 rounded-md mt-5 text-black" type="text" name="description" id="" placeholder="Description"></textarea>
            <input class="block w-1/3 px-3 py-2  mt-5 bg-red-600" type="submit" value="Create A Post">
        </form>
    </div>
